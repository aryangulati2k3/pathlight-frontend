{
  "name": "pathlight-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "check:all": "pnpm lint:ci && pnpm typecheck",
    "depcheck": "depcheck",
    "predev": "pnpm lint && pnpm format",
    "dev": "next dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings=0",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "start": "next start",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.544.0",
    "next": "16.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "baseline-browser-mapping": "^2.9.7",
    "depcheck": "^1.4.7",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3"
    }
  }
}
