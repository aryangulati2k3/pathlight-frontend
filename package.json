{
  "name": "ecommerce-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "check:all": "pnpm lint:ci && pnpm typecheck",
    "depcheck": "depcheck",
    "predev": "pnpm lint && pnpm format",
    "dev": "next dev",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings=0",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "start": "next start",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "depcheck": "^1.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
